#:kivy 1.1.0
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<BackgroundBoxLayout@BoxLayout+BackgroundColor>
    background_color: 1, 1, 1, 1

<BackgroundGridLayout@GridLayout+BackgroundColor>
    background_color: 1, 1, 1, 1

<BackgroundLabel@Label+BackgroundColor>
    background_color: 1, 1, 1, 1

<NormalButton@Button+BackgroundColor>
    size_hint: (1, None)
    height: '25dp'
    padding: (5, 5)
    margin: (5,5)
    halign: 'center'
    text_size: self.size
    font_size: dp(13)
    background_normal: ''
    background_color: (.8,.8,.8,1)
    color:(0,0,0,1)

<ToggleButton>
    size_hint: (None, None)
    height: '25dp'
    padding: (5, 5)
    margin: (5,5)
    halign: 'center'
    text_size: self.size
    font_size: dp(13)
    background_normal: ''
    background_down: ''
    background_color: (1,1,1,1)
    color:(0,0,0,1)

<NormalLabel@Label>
    color: (0,0,0,1)
    halign: 'left'
    valign: 'middle'
    height: '30dp'
    size_hint_y: None
    text_size: self.size
    font_size: dp(13)
    padding_x: 10

<TabbedPanelStrip>
    canvas:
        Color:
            rgba: (1, 1, 1, 1) # green
        Rectangle:
            size: self.size
            pos: self.pos
Root:
    main_view_parent:main_view_parent
    info_bar: info_bar
    lbl_input_dir:lbl_input_dir
    btn_play: btn_play
    lbl_src_video: lbl_src_video
    replay_video_canvas:replay_video_canvas
    video_progress: video_progress
    txt_box_step_size: txt_box_step_size
    txt_box_replay_video_rate:txt_box_replay_video_rate
    frame_details: frame_details
    chkbx_bg_is_grab:chkbx_bg_is_grab
    chkbx_maintain_track:chkbx_maintain_track
    # tabbed_main_view:tabbed_main_view
    # tabbed_timeline_item:tabbed_timeline_item
    RelativeLayout:
        anchor_x:'left'
        anchor_y:'top'
        id: main_view_parent
        BackgroundGridLayout:
            rows: 3
            cols: 1
            TabbedPanel:
                id: tabbed_main_view
                do_default_tab: False
                TabbedPanelItem:
                    id: tabbed_timeline_item_video
                    markup:True
                    text: "[b]" + root.get_local_str("_timeline_stage") + "[/b]"
                    BackgroundBoxLayout:
                        orientation: 'vertical'
                        BackgroundGridLayout:
                            cols:2
                            BackgroundGridLayout:
                                rows:1
                                size_hint_x: .75
                                ResultVideoCanvas:
                                    id: replay_video_canvas
                                    allow_stretch:False
                                    keep_ratio:True
                            BackgroundGridLayout:
                                cols:1
                                rows:3
                                size_hint_x: .3
                                background_color: (.6, .6, .6, 1)
                                padding: [2, 0, 0, 0]
                                GridLayout:
                                    rows: 2
                                    NormalLabel:
                                        markup:True
                                        text: "[b]" + root.get_local_str("_frame_details") + "[/b]"
                                    FrameDetails:
                                        id: frame_details
                                BackgroundGridLayout:
                                    rows:1
                                    size_hint_y: None
                                    height:2
                                    padding: [10, 0, 0, 10]
                                    background_color: (0, .196, .313, 1)
                                BackgroundGridLayout:
                                    background_color: (1, 1, 1, 1)
                                    rows: 2
                                    size_hint_y: None
                                    height: 60
                                    padding: [0, 10, 0, 0]
                                    GridLayout:
                                        cols: 2
                                        size_hint_y: None
                                        height: 30
                                        NormalLabel:
                                            id:lbl_bg_is_grab
                                            text: root.get_local_str("_bg_is_grab")
                                            color: [0,0,0,1]
                                            size_hint_x: .6
                                            size_hint_y: None
                                            height: 20
                                            halign: 'left'
                                        CheckBox:
                                            id:chkbx_bg_is_grab
                                            size_hint: (None, None)
                                            color: [0,0,0,1]
                                            size_hint_y: None
                                            height: 20
                                    GridLayout:
                                        cols: 2
                                        size_hint_y: None
                                        height: 30
                                        NormalLabel:
                                            id:lbl_maintain_track
                                            text: root.get_local_str("_maintain_track")
                                            color: [0,0,0,1]
                                            size_hint_x: .6
                                            size_hint_y: None
                                            height: 20
                                            halign: 'left'
                                        CheckBox:
                                            id:chkbx_maintain_track
                                            size_hint: (None, None)
                                            color: [0,0,0,1]
                                            size_hint_y: None
                                            height: 20

                        Slider:
                            id: video_progress
                            value: 0
                            min: 0
                            size_hint_y: None
                            size_y: 1
                            value_track:True
                            value_track_color:[1, 0, 0, 1]
                            cursor_size: ['10sp', '10sp']
                            cursor_image: ''
                            value_track_width: '2.5sp'
                TabbedPanelItem:
                    id: tabbed_timeline_item_table
                    markup:True
                    text: "[b]" + root.get_local_str("_tl_table") + "[/b]"
                    Table:
                        id: tl_table
                TabbedPanelItem:
                    id: tabbed_timeline_item_charts
                    markup:True
                    text: "[b]" + root.get_local_str("_tl_charts") + "[/b]"
            BackgroundGridLayout:
                rows:1
                size_hint_y: None
                height:2
                background_color: (0, .196, .313, 1)
            BackgroundGridLayout:
                rows:1
                cols:2
                size_hint_y: .2
                background_color: (.9, .9, .9, .9)
                GridLayout:
                    rows:3
                    id: main
                    size_hint_x: .55
                    padding: [5, 5, 5, 5]
                    GridLayout:
                        rows: 1
                        cols: 2
                        size_hint_y: None
                        height: 40
                        id: file_ops
                        NormalLabel:
                            id:lbl_src_video
                            text: root.get_default_from_prev_session('lbl_src_video',root.get_local_str("_load_stimuli_video"))
                        NormalButton:
                            text: root.get_local_str("_select_src_video")
                            on_release: root.show_load_video()
                            size_hint: (None, None)
                            width: '220dp'
                            height: '25dp'
                    GridLayout:
                        rows: 1
                        cols: 2
                        size_hint_y: None
                        height:40
                        id: file_ops
                        NormalLabel:
                            id:lbl_input_dir
                            text: root.get_default_from_prev_session('lbl_input_dir', root.get_local_str("_directory_not_selected"))
                        NormalButton:
                            text: root.get_local_str("_select_directory")
                            on_release: root.show_load()
                            size_hint: (None, None)
                            width: '220dp'
                            height: '25dp'
                GridLayout:
                    id: tools_pane
                    size_hint_x: .45
                    rows: 2
                    padding: [5, 5, 5, 5]
                    GridLayout:
                        rows: 1
                        size_hint_y: None
                        height:45
                        background_color: (.9, .9, .9, 1)
                        # NormalButton:
                        #     text: root.get_local_str("_frame_info")
                        #     on_release: root.show_frame_info()
                        # NormalLabel:
                        #     text: ''
                        #     size_hint_x: 0.01
                        NormalButton:
                            id: btn_step_backward
                            text: root.get_local_str("_step_back")
                            on_release: root.btn_step_backward_click()
                        NormalLabel:
                            text: ''
                            size_hint_x: 0.01
                        NormalButton:
                            id: btn_step_forward
                            text: root.get_local_str("_step_forward")
                            on_release: root.btn_step_forward_click()
                        NormalLabel:
                            text: ''
                            size_hint_x: .01
                        NormalButton:
                            id: btn_play
                            text: root.get_local_str("_start")
                            on_release: root.btn_play_click()
                        NormalLabel:
                            text: ''
                            size_hint_x: 0.01
                        NormalButton:
                            id: btn_stop
                            text: root.get_local_str("_stop")
                            on_release: root.btn_stop_click()

                    GridLayout:
                        rows: 1
                        cols: 3
                        padding_y: [0, 0]
                        padding_x: [5, 5]
                        GridLayout:
                            rows: 2
                            FloatInput:
                                id: txt_box_replay_video_rate
                                text: root.get_default_from_prev_session('txt_box_replay_video_rate',"")
                                size_hint: (.8, None)
                                height: 25
                                multiline:False
                                font_size: dp(13)
                            NormalLabel:
                                text: root.get_local_str("_video_fps")
                        NormalLabel:
                            text: ''
                            size_hint_x: 0.01
                        GridLayout:
                            rows: 2
                            IntegerInput:
                                id: txt_box_step_size
                                text: root.get_default_from_prev_session('txt_box_step_size',"10")
                                size_hint: (.6, None)
                                height: 25
                                multiline:False
                                font_size: dp(13)
                            NormalLabel:
                                text: root.get_local_str("_step_size")


        InfoBar:
            id: info_bar
