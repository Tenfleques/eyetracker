#:kivy 1.1.0
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<BackgroundBoxLayout@BoxLayout+BackgroundColor>
    background_color: 1, 1, 1, 1

<BackgroundGridLayout@GridLayout+BackgroundColor>
    background_color: 1, 1, 1, 1

<BackgroundLabel@Label+BackgroundColor>
    background_color: 1, 1, 1, 1

<NormalButton@Button+BackgroundColor>
    size_hint: (None, None)
    height: '25dp'
    padding: (5, 5)
    margin: (5,5)
    halign: 'center'
    text_size: self.size
    font_size: dp(13)
    background_normal: ''
    background_color: (.8,.8,.8,1)
    color:(0,0,0,1)

<ToggleButton>
    size_hint: (None, None)
    height: '25dp'
    padding: (5, 5)
    margin: (5,5)
    halign: 'center'
    text_size: self.size
    font_size: dp(13)
    background_normal: ''
    background_down: ''
    background_color: (1,1,1,1)
    color:(0,0,0,1)

<NormalLabel@Label>
    color: (0,0,0,1)
    halign: 'left'
    valign: 'middle'
    height: '30dp'
    size_hint_y: None
    text_size: self.size
    font_size: dp(13)
    padding_x: 10

<TabbedPanelStrip>
    canvas:
        Color:
            rgba: (1, 1, 1, 1) # green
        Rectangle:
            size: self.size
            pos: self.pos
<VideoCanvas@Image>
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            # size: self.width , self.height
            pos: self.x , self.y 

Root:
    main_view_parent:main_view_parent
    lbl_output_dir:lbl_output_dir
    app_log: app_log
    stimuli_video_log: stimuli_video_log
    btn_play: btn_play
    camera_log: camera_log
    lbl_src_video: lbl_src_video
    view_stage_header: view_stage_header
    view_stage: view_stage
    pagination_zone:pagination_zone
    txt_box_video_rate: txt_box_video_rate
    lbl_video_fps_in_use: lbl_video_fps_in_use
    video_canvas:video_canvas
    tabbed_main_view:tabbed_main_view
    tabbed_video_item: tabbed_video_item
    tabbed_timeline_item:tabbed_timeline_item
    video_canvas_parent: video_canvas_parent

    RelativeLayout:
        anchor_x:'left'
        anchor_y:'top'
        id: main_view_parent
        GridLayout:
            rows: 3
            cols: 1
            GridLayout:
                rows:1
                cols:2
                size_hint_y: None
                height:80
                GridLayout:
                    rows:3
                    id: main
                    size_hint_x: .65
                    padding: [5, 5, 5, 5]
                    GridLayout:
                        rows: 1
                        cols: 2
                        size_hint_y: None
                        height:40
                        id: file_ops
                        NormalLabel:
                            id:lbl_output_dir
                            text: root.get_default_from_prev_session('lbl_output_dir', root.get_local_str("_directory_not_selected"))
                        NormalButton:
                            text: root.get_local_str("_select_directory")
                            on_release: root.show_load()
                            size_hint: (None, None)
                            width: '220dp'
                            height: '25dp'
                    GridLayout:
                        rows: 1
                        cols: 2
                        size_hint_y: None
                        height: 40
                        id: file_ops
                        NormalLabel:
                            id:lbl_src_video
                            text: root.get_default_from_prev_session('lbl_src_video',root.get_local_str("_load_stimuli_video"))
                        NormalButton:
                            text: root.get_local_str("_select_src_video")
                            on_release: root.show_load_video()
                            size_hint: (None, None)
                            width: '220dp'
                            height: '25dp'
                GridLayout:
                    id: tools_pane
                    size_hint_x: .35
                    cols: 1
                    padding: [5, 5, 5, 5]
                    GridLayout:
                        cols: 3
                        size_hint_y: None
                        height: 45
                        NormalLabel:
                            text: root.get_local_str("_frequency_in_use")
                            size_hint_y: None
                        NormalLabel:
                            text: root.txt_box_video_rate.text
                            id: lbl_video_fps_in_use
                            halign: 'left'
                        NormalButton:
                            id: btn_play
                            text: root.get_local_str("_start")
                            on_release: root.btn_play_click()
                    FloatInput:
                        id: txt_box_video_rate
                        text: root.get_default_from_prev_session('txt_box_video_rate',"")
                        size_hint: (.9, None)
                        height: 25
                        multiline:False
                        font_size: dp(13)
            BackgroundGridLayout:
                rows:1
                size_hint_y: None
                height:2
                background_color: (0, .196, .313, 1)
            TabbedPanel:
                id: tabbed_main_view
                size_hint: 1, 1
                do_default_tab: False
                TabbedPanelItem:
                    id: tabbed_video_item
                    text: root.get_local_str("_video_stage")
                    color: (0,0,0,1)
                    BackgroundBoxLayout:
                        orientation: 'vertical'
                        id: video_canvas_parent
                        VideoCanvas:
                            id: video_canvas
                            size_hint: (1,1)
                TabbedPanelItem:
                    id: tabbed_timeline_item
                    text: root.get_local_str("_timeline_stage")
                    BackgroundGridLayout:
                        rows: 3
                        BackgroundGridLayout:
                            id: view_stage_header
                            size_hint_y: None
                            height: 35
                            cols: 4
                            margin_y: 10
                            background_color: (.8,.8,.8,1)
                            NormalLabel:
                                id:lbl_timestamp
                                markup:True
                                text: 'timestamp'
                            NormalLabel:
                                id:lbl_gaze
                                markup:True
                                text: 'gaze'
                            NormalLabel:
                                id:lbl_camera
                                markup:True
                                text: 'camera'
                            NormalLabel:
                                id:lbl_video
                                markup:True
                                text: 'video'
                        ScrollView:
                            do_scroll_x: False
                            do_scroll_y: True
                            BackgroundGridLayout:
                                id: view_stage
                                size_hint_y: 1
                                cols: 1
                        BackgroundGridLayout:
                            id: pagination_zone
                            rows: 1
                            size_hint_y: None
                            height: 80

    AnchorLayout:
        anchor_x:'left'
        anchor_y:'bottom'
        BackgroundBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height:'30dp'
            padding_x: 5
            background_color: (0, .196, .313, 1)
            NormalLabel:
                id: stimuli_video_log
                text: ''
                color: (1,1,1,1)
                halign: 'left'
                valign: 'center'
            NormalLabel:
                id: app_log
                text: ''
                color: (1,1,1,1)
                halign: 'left'
                valign: 'center'
                padding_x: 5
            NormalLabel:
                id: camera_log
                text: ''
                color: (1,1,1,1)
                halign: 'right'
                valign: 'center'
                padding_x: 5

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            dirselect: True
            path: root.get_default_from_prev_session('filechooser', default="~")

        BoxLayout:
            size_hint_y: None
            height: 30
            NormalButton:
                text: root.get_local_str("_cancel")
                on_release: root.cancel()

            NormalButton:
                text: root.get_local_str("_select")
                on_release: root.load(filechooser.path, filechooser.selection)
