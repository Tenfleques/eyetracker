#:kivy 1.1.0
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<BackgroundBoxLayout@BoxLayout+BackgroundColor>
    background_color: 1, 1, 1, 1

<BackgroundGridLayout@GridLayout+BackgroundColor>
    background_color: 1, 1, 1, 1

<BackgroundLabel@Label+BackgroundColor>
    background_color: 1, 1, 1, 1

<BackgroundRelativeLayout@RelativeLayout+BackgroundColor>
    background_color: 0, 0, 0, 1

<BackgroundFloatLayout@FloatLayout+BackgroundColor>
    background_color: 0, 0, 0, 1

<NormalButton@Button+BackgroundColor>
    size_hint: (None, None)
    height: '25dp'
    padding: (5, 5)
    margin: (5,5)
    halign: 'center'
    text_size: self.size
    font_size: dp(13)
    background_normal: ''
    background_color: (.8,.8,.8,1)
    color:(0,0,0,1)

<ToggleButton>
    size_hint: (None, None)
    height: '25dp'
    padding: (5, 5)
    margin: (5,5)
    halign: 'center'
    text_size: self.size
    font_size: dp(13)
    background_normal: ''
    background_down: ''
    background_color: (1,1,1,1)
    color:(0,0,0,1)

<NormalLabel@Label>
    color: (0,0,0,1)
    halign: 'left'
    valign: 'middle'
    height: '30dp'
    size_hint_y: None
    text_size: self.size
    font_size: dp(13)
    padding_x: 10

<TabbedPanelStrip>
    canvas:
        Color:
            rgba: (1, 1, 1, 1) # green
        Rectangle:
            size: self.size
            pos: self.pos

BackgroundGridLayout:
    screen_manager: screen_manager
    tracker_screen:tracker_screen
    replay_screen:replay_screen
    rows: 2
    BackgroundGridLayout:
        rows: 1
        size_hint_y: None
        height: 30
        NormalButton:
            id : btn_tracker_screen
            # text: root.get_local_str("_select_directory")
            text: '_btn_tracker_screen'
            on_release: root.screen_manager.current = 'tracker_screen'
            size_hint: (None, None)
            width: '180dp'
            height: '25dp'
        NormalButton:
            id : btn_tracker_screen
            # text: root.get_local_str("_select_directory")
            text: '_btn_replay_screen'
            on_release: root.screen_manager.current = 'replay_screen'
            size_hint: (None, None)
            width: '180dp'
            height: '25dp'

    ScreenManager:
        id: screen_manager
        TrackerScreen:
            id: tracker_screen
            name: 'tracker_screen'
        ReplayScreen:
            id: replay_screen
            name: 'replay_screen'
            
        
