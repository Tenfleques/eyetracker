#:kivy 1.10.0
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            dirselect: True
            path: root.get_default_from_prev_session('filechooser', default="~")

        GridLayout:
            size_hint_y: None
            height: 30
            cols: 3
            NormalButton:
                text: root.get_local_str("_cancel")
                on_release: root.cancel()
                size_hint_x:.9
            NormalLabel:
                text: ''
                size_hint: (.01,1)
            NormalButton:
                text: root.get_local_str("_select")
                on_release: root.load(filechooser.path, filechooser.selection)
                size_hint_x:.9
