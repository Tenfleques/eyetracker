#:kivy 1.1.0
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<BackgroundBoxLayout@BoxLayout+BackgroundColor>
    background_color: 1, 1, 1, 1

<BackgroundGridLayout@GridLayout+BackgroundColor>
    background_color: 1, 1, 1, 1

<BackgroundLabel@Label+BackgroundColor>
    background_color: 1, 1, 1, 1

<BackgroundRelativeLayout@RelativeLayout+BackgroundColor>
    background_color: 0, 0, 0, 1

<BackgroundFloatLayout@FloatLayout+BackgroundColor>
    background_color: 0, 0, 0, 1

<NormalButton@Button+BackgroundColor>
    size_hint: (None, None)
    height: '25dp'
    padding: (5, 5)
    margin: (5,5)
    halign: 'center'
    text_size: self.size
    font_size: dp(13)
    background_normal: ''
    background_color: (.8,.8,.8,1)
    color:(0,0,0,1)

<ToggleButton>
    size_hint: (None, None)
    height: '25dp'
    padding: (5, 5)
    margin: (5,5)
    halign: 'center'
    text_size: self.size
    font_size: dp(13)
    background_normal: ''
    background_down: ''
    background_color: (1,1,1,1)
    color:(0,0,0,1)

<NormalLabel@Label>
    color: (0,0,0,1)
    halign: 'left'
    valign: 'middle'
    height: '30dp'
    size_hint_y: None
    text_size: self.size
    font_size: dp(13)
    padding_x: 10

<TabbedPanelStrip>
    canvas:
        Color:
            rgba: (1, 1, 1, 1) # green
        Rectangle:
            size: self.size
            pos: self.pos

GridLayout:
    screen_manager: screen_manager
    tracker_screen:tracker_screen
    replay_screen:replay_screen
    info_bar: info_bar
    rows: 3
    BackgroundGridLayout:
        rows: 1
        size_hint_y: None
        height: 35
        background_color: (.9, .9, .9, 1)
        cols: 4

        NormalButton:
            id : btn_tracker_screen
            text: app.get_local_str("_btn_generator_screen")
            on_release: root.screen_manager.current = 'generator_screen'
            size_hint: (None, None)
            width: '180dp'
            height: '25dp'
            background_color: (.9, .9, .9, 1)
            halign: 'left'

        NormalButton:
            id : btn_tracker_screen
            text: app.get_local_str("_btn_tracker_screen")
            on_release: root.screen_manager.current = 'tracker_screen'
            size_hint: (None, None)
            width: '180dp'
            height: '25dp'
            background_color: (.9, .9, .9, 1)
            halign: 'left'
        NormalButton:
            id : btn_tracker_screen
            text: app.get_local_str('_btn_replay_screen')
            on_release: root.screen_manager.current = 'replay_screen'
            size_hint: (None, None)
            width: '180dp'
            height: '25dp'
            background_color: (.9, .9, .9, 1)
            halign: 'left'
        

    ScreenManager:
        id: screen_manager
        GeneratorScreen:
            id: generator_screen
            margin: [50,50,50,50]
            name: 'generator_screen'
        TrackerScreen:
            id: tracker_screen
            name: 'tracker_screen'
        ReplayScreen:
            id: replay_screen
            name: 'replay_screen'

    InfoBar:
        id: info_bar
        size_hint_y: None
        height:20
