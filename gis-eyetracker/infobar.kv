
<InfoBar>:
    app_log: app_log
    stimuli_video_log: stimuli_video_log
    camera_log: camera_log
    anchor_x:'left'
    anchor_y:'bottom'
    BackgroundBoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height:'30dp'
        padding_x: 5
        background_color: (0, .196, .313, 1)
        NormalLabel:
            id: stimuli_video_log
            text: ''
            color: (1,1,1,1)
            halign: 'left'
            valign: 'center'
        NormalLabel:
            id: app_log
            text: ''
            color: (1,1,1,1)
            halign: 'left'
            valign: 'center'
            padding_x: 5
        NormalLabel:
            id: camera_log
            text: ''
            color: (1,1,1,1)
            halign: 'right'
            valign: 'center'
            padding_x: 5
